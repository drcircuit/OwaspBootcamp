            font-weight: 600;
            color: #fff;
        }
        
        .cta-section {
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            padding: 3rem;
            border-radius: 12px;
            text-align: center;
            margin: 3rem 0;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }
        
        .cta-section h3 {
