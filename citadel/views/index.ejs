    <title><%= title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background: #f5f5f5;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            min-height: 100vh;
        }
        
        header {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            color: white;
            padding: 2rem 3rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            position: relative;
            overflow: hidden;
        }
        
        header::before {
            content: 'üí∞';
            position: absolute;
            right: 10%;
            top: 50%;
            transform: translateY(-50%);
            font-size: 8rem;
            opacity: 0.1;
        }
        
        header h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 3px 3px 6px rgba(0,0,0,0.5);
            letter-spacing: -1px;
        }
        
        header .tagline {
            font-size: 1.3rem;
            font-style: italic;
            opacity: 0.9;
            color: #ffd700;
            font-weight: 600;
        }
        
        nav {
            margin-top: 1.5rem;
            padding-top: 1rem;
            border-top: 2px solid rgba(255,215,0,0.3);
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
        }
        
        nav a {
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            background: rgba(255,255,255,0.1);
        }
        
        nav a:hover {
            background: rgba(255,215,0,0.2);
            transform: translateY(-2px);
        }
        
        .hero-banner {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), 
                        url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1200&h=400&fit=crop');
            background-size: cover;
            background-position: center;
            text-align: center;
            padding: 5rem 2rem;
            color: white;
            position: relative;
        }
        
        .hero-banner h2 {
            font-size: 3rem;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
            font-weight: 800;
        }
        
        .hero-banner p {
            font-size: 1.4rem;
            max-width: 900px;
            margin: 0 auto;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
            line-height: 1.8;
        }
        
        .stats-banner {
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            padding: 2rem;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            text-align: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }
        
        .stat {
            color: #1a1a2e;
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            display: block;
            margin-bottom: 0.5rem;
        }
        
        .stat-label {
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        
        main {
            padding: 3rem 3rem;
        }
        
        .section-title {
            color: #1a1a2e;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: center;
            font-weight: 800;
            position: relative;
            padding-bottom: 1rem;
        }
        
        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #ffd700, #ffed4e);
        }
        
        .services {
            margin: 3rem 0;
        }
        
        .service-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .service-card {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s;
            border: 2px solid #f0f0f0;
            position: relative;
            overflow: hidden;
        }
        
        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #1a1a2e, #ffd700);
        }
        
        .service-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            border-color: #ffd700;
        }
        
        .service-card h4 {
            color: #1a1a2e;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }
        
        .service-card p {
            color: #666;
            margin-bottom: 1.5rem;
            font-size: 1.05rem;
        }
        
        .service-card a {
            display: inline-block;
            color: #1a1a2e;
            text-decoration: none;
            font-weight: 700;
            transition: all 0.3s;
            padding: 0.7rem 1.5rem;
            background: linear-gradient(135deg, #ffd700, #ffed4e);
            border-radius: 5px;
        }
        
        .service-card a:hover {
            background: linear-gradient(135deg, #ffed4e, #ffd700);
            transform: translateX(5px);
        }
        
        .executive-section {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            padding: 4rem 3rem;
            margin: 3rem -3rem;
            color: white;
        }
        
        .executive-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
            margin-top: 2rem;
        }
        
        .executive-card {
            text-align: center;
        }
        
        .executive-photo {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, #ffd700, #ffed4e);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            box-shadow: 0 4px 15px rgba(255,215,0,0.3);
        }
        
        .executive-name {
